{
    "name": "Send to Cursor (Element Inspector)",
    "description": "Pick an element and copy HTML/CSS/selector to paste into Cursor.",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "clipboardWrite",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "bg.js"
    }
}